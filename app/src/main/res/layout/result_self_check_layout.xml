<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/result_selfcheck_topbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <EditText
        android:id="@+id/transfer_location_component_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp_16"
        android:textColor="@color/bg_black"
        android:padding="@dimen/dp_20"
        />


    <CheckBox
        android:id="@+id/checkbox_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="底膜底板"
        android:textSize="@dimen/dp_16"
        />
    <CheckBox
        android:id="@+id/checkbox_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="配件材料的品种规格"
        android:textSize="@dimen/dp_16"
        />
    <CheckBox
        android:id="@+id/checkbox_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="预埋件部件连接固定"
        android:textSize="@dimen/dp_16"
        />
    <CheckBox
        android:id="@+id/checkbox_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="模具的缝隙不漏浆"
        android:textSize="@dimen/dp_16"
        />
    <CheckBox
        android:id="@+id/checkbox_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="模具清理涂刷隔离剂"
        android:textSize="@dimen/dp_16"
        />


    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="长（高）（0，-5）："
        android:textSize="@dimen/dp_16"
        android:textColor="@color/bg_black"
        android:padding="@dimen/dp_20"
        />
    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="宽（0，-5）："
        android:textSize="@dimen/dp_16"
        android:textColor="@color/bg_black"
        android:padding="@dimen/dp_20"
        />
    <EditText
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="厚（1，-2）："
        android:textSize="@dimen/dp_16"
        android:textColor="@color/bg_black"
        android:padding="@dimen/dp_20"
        />
    <EditText
        android:id="@+id/editText4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="肱宽（±2）："
        android:textSize="@dimen/dp_16"
        android:textColor="@color/bg_black"
        android:padding="@dimen/dp_20"
        />
    <EditText
        android:id="@+id/editText5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="翼板厚（±1）："
        android:textSize="@dimen/dp_16"
        android:textColor="@color/bg_black"
        android:padding="@dimen/dp_20"
        />
    <EditText
        android:id="@+id/editText6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="门窗洞口（长宽0，-5）："
        android:textSize="@dimen/dp_16"
        android:textColor="@color/bg_black"
        android:padding="@dimen/dp_20"
        />
    <EditText
        android:id="@+id/editText7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="对角线（△3）："
        android:textSize="@dimen/dp_16"
        android:textColor="@color/bg_black"
        android:padding="@dimen/dp_20"
        />
    <EditText
        android:id="@+id/editText8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="表面平度清水面（△2）："
        android:textSize="@dimen/dp_16"
        android:textColor="@color/bg_black"
        android:padding="@dimen/dp_20"
        />
    <EditText
        android:id="@+id/editText9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="表面平度普通面（△3）："
        android:textSize="@dimen/dp_16"
        android:textColor="@color/bg_black"
        android:padding="@dimen/dp_20"
        />
    <EditText
        android:id="@+id/editText10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="侧向弯曲（板≤5）："
        android:textSize="@dimen/dp_16"
        android:textColor="@color/bg_black"
        android:padding="@dimen/dp_20"
        />
    <EditText
        android:id="@+id/editText11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="翘曲（L/1500）"
        android:textSize="@dimen/dp_16"
        android:textColor="@color/bg_black"
        android:padding="@dimen/dp_20"
        />
    <EditText
        android:id="@+id/editText12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="拼板表面高低差（1）"
        android:textSize="@dimen/dp_16"
        android:textColor="@color/bg_black"
        android:padding="@dimen/dp_20"
        />
    <EditText
        android:id="@+id/editText13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="门窗口位置偏移（1):"
        android:textSize="@dimen/dp_16"
        android:textColor="@color/bg_black"
        android:padding="@dimen/dp_20"
        />
    <EditText
        android:id="@+id/editText14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="中心线位置偏移 ："
        android:textSize="@dimen/dp_16"
        android:textColor="@color/bg_black"
        android:padding="@dimen/dp_20"
        />
    <EditText
        android:id="@+id/editText15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="不合格复查返修记录 ："
        android:textSize="@dimen/dp_16"
        android:textColor="@color/bg_black"
        android:padding="@dimen/dp_20"
        />
    <EditText
        android:id="@+id/editText16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="生产检验结果 ："
        android:textSize="@dimen/dp_16"
        android:textColor="@color/bg_black"
        android:padding="@dimen/dp_20"
        />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/qmui_config_color_white"
            android:orientation="horizontal"
            android:padding="5dp">


            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/selfcheck_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:clickable="true"
                android:text="确认合格"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="?attr/qmui_common_list_item_title_h_text_size"
                app:qmui_isRadiusAdjustBounds="true" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_self_no"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/qmui_config_color_white"
            android:orientation="horizontal"
            android:padding="5dp">


            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/selfcheck_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:clickable="true"
                android:text="确认不合格"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="?attr/qmui_common_list_item_title_h_text_size"
                app:qmui_isRadiusAdjustBounds="true" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>



</LinearLayout>
    </ScrollView>



</LinearLayout>